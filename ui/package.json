{
  "name": "livewire-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "npm run serve-vue && npm run build-css",
    "build": "set NODE_ENV=production && npm run build-vue & npm run build-css",
    "lint": "vue-cli-service lint",
    "build-css": "postcss src/assets/app.css -o dist/css/app.css",
    "build-vue": "vue-cli-service build",
    "serve-vue": "vue-cli-service serve"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/vue-fontawesome": "^2.0.0",
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "autoprefixer": "^9.8.6",
    "axios": "^0.19.2",
    "core-js": "^3.6.5",
    "postcss-cli": "^7.1.2",
    "tailwindcss": "^1.9.5",
    "vue": "^2.6.12",
    "vue-router": "^3.4.7",
    "vuex": "^3.4.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.4.0",
    "@vue/cli-plugin-eslint": "~4.4.0",
    "@vue/cli-plugin-vuex": "^4.5.8",
    "@vue/cli-service": "~4.4.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "prettier": "^2.1.2",
    "vue-template-compiler": "^2.6.12"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
